generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String?
  price       Int
  image       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id              String      @id @default(uuid())
  customerName    String
  customerEmail   String
  customerPhone   String
  deliveryAddress String?
  totalAmount     Int
  status          String      @default("pending") // pending, paid, processing, delivered, cancelled
  paymentMethod   String?     // vipps, stripe
  paymentId       String?
  orderItems      OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  price     Int
  createdAt DateTime @default(now())
}
